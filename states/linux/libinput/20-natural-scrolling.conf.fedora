Section "InputClass"
	Identifier "Natural Scrolling Pointer"
	MatchIsPointer "on"
	MatchDevicePath "/dev/input/event*"
	Option "NaturalScrolling" "on"
EndSection

Section "InputClass"
	Identifier "Natural Scrolling Touchpad"
	MatchIsTouchpad "on"
	MatchDevicePath "/dev/input/event*"
	Option "NaturalScrolling" "on"
EndSection
